{
  "compilerOptions": {
    "baseUrl": "packages",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es5",
      "es2015.promise",
      "es2015.collection",
      "es2015.iterable"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "outDir": "dist/all/j2se-js",
    "paths": {
      "@j2se-js/*": [
        "./*"
      ]
    },
    "removeComments": true,
    "rootDir": "packages",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "target": "es5"
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
